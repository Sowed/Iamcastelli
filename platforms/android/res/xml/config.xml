<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sowedcastelli.iamcastelli" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <allow-intent href="market:*" />
    <name>Iamcastelli</name>
    <description>
        Sowed Castelli's Cross platform App.
    </description>
    <author email="me@sowedcastelli.com" href="http://sowedcastelli.com">
        Sowed Mujjuzi Castelli
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
</widget>
